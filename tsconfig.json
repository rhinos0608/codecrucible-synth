{
  "compilerOptions": {
    // 2025 Best Practices - Modern Target & Modules  
    "target": "ES2022",
    "module": "NodeNext", // NodeNext for better package.json exports support
    "moduleResolution": "nodenext", // NodeNext resolution - better .d.ts with .js extension handling
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "downlevelIteration": true,

    // Strict Type Checking - 2025 Enterprise Standards (gradual enablement)
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": false, // Temporarily disabled - 156 errors
    "noUncheckedIndexedAccess": false, // Temporarily disabled - 185 errors
    "noPropertyAccessFromIndexSignature": false, // Temporarily disabled - 301 errors

    // Additional Checks - 2025 Standards (Gradual Migration)
    "noUnusedLocals": false, // Disabled - ESLint handles this with better underscore support
    "noUnusedParameters": false, // Disabled - ESLint handles this with better underscore support
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,

    // Module Resolution & Imports
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,

    // Emit Options - Optimized for memory efficiency
    "declaration": true,
    "declarationMap": false, // Disabled to reduce memory usage during build
    "sourceMap": false, // Disabled to reduce memory usage during build
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true, // Remove comments to reduce memory usage
    "noEmitOnError": false, // Temporarily allow build with errors for testing
    "preserveConstEnums": true, // Required when isolatedModules is enabled
    "incremental": true, // Enable incremental compilation for faster rebuilds
    "tsBuildInfoFile": "./dist/.tsbuildinfo", // Store build info for incremental builds

    // Decorator Support (if needed)
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Library Inclusions
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "types": ["node", "jest"],

    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/config/*": ["config/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/domain/*": ["src/domain/*"],
      "@/application/*": ["src/application/*"],
      "@/infrastructure/*": ["src/infrastructure/*"],
      "@/core/*": ["src/core/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "archive",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/testing/**/*"
  ]
}
