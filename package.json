    "@typescript-eslint/typescript-estree": "^8.41.0",
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "ai": "^3.4.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
