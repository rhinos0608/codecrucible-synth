{
  "name": "codecrucible-synth",
  "version": "4.2.4",
  "description": "Production-Ready AI Development Platform with Multi-Voice Synthesis, Smithery MCP Integration, Enterprise Security, and Zero-Timeout Reliability",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "crucible": "./dist/bin/crucible.js",
    "cc": "./dist/bin/crucible.js",
    "codecrucible": "./dist/bin/crucible.js"
  },
  "scripts": {
    "build": "npm run lint && npm run build:rust && tsc && npm run copy-assets",
    "build:rust": "cd rust-executor && napi build --release",
    "build:rust:dev": "cd rust-executor && napi build",
    "build:cross-platform": "cd rust-executor && napi build --release --target x86_64-pc-windows-msvc && napi build --release --target x86_64-apple-darwin && napi build --release --target x86_64-unknown-linux-gnu",
    "prepublishOnly": "npm run build && cd rust-executor && napi prepublish -t npm",
    "copy-assets": "node scripts/copy-assets.js",
    "dev": "tsx src/index.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "node node_modules/jest/bin/jest.js --config jest.config.unit.cjs",
    "test:integration": "node node_modules/jest/bin/jest.js --config jest.config.integration.cjs",
    "test:smoke": "node node_modules/jest/bin/jest.js --config jest.smoke.config.cjs",
    "test:fast": "node node_modules/jest/bin/jest.js --config jest.config.unit.cjs --maxWorkers=75%",
    "test:unit:watch": "node node_modules/jest/bin/jest.js --config jest.config.unit.cjs --watch",
    "test:perf": "node node_modules/jest/bin/jest.js --verbose --logHeapUsage --detectOpenHandles",
    "test:all": "node node_modules/jest/bin/jest.js --config jest.config.cjs",
    "test:coverage": "npm test -- --coverage",
    "test:coverage:open": "npm run test:coverage && npm run coverage:open",
    "coverage:open": "open coverage/lcov-report/index.html || start coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "test:ci": "npm run test:coverage -- --ci --maxWorkers=2 --testTimeout=60000",
    "lint": "eslint",
    "lint:src": "eslint src/**/*.ts",
    "lint:tests": "eslint tests/**/*.ts",
    "lint:fix": "eslint --fix",
    "lint:fix:src": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,js,json}\" --ignore-path .prettierignore",
    "format:src": "prettier --write \"src/**/*.{ts,js,json}\"",
    "typecheck": "npx tsc --noEmit",
    "fix-code": "npm run format && npm run lint:fix && npm run typecheck",
    "code-quality": "npm run lint && npm run format:check && npm run typecheck",
    "dev-check": "npm run code-quality && npm run test:smoke",
    "pre-commit": "npm run format && npm run lint:fix",
    "start": "node dist/index.js --interactive",
    "cli": "npm run build && node dist/index.js",
    "install-global": "npm run build && npm link",
    "test-install": "node scripts/install-and-test.js",
    "package:bundle": "ncc build dist/index.js -o build/bundled",
    "package:win": "npm run package:bundle && npm run desktop:package:win",
    "package:mac": "npm run package:bundle && npm run desktop:package:mac",
    "package:linux": "npm run package:bundle && npm run desktop:package:linux",
    "package:all": "npm run package:win && npm run package:mac && npm run package:linux",
    "desktop:package": "electron-builder",
    "desktop:package:win": "electron-builder --win",
    "desktop:package:mac": "electron-builder --mac",
    "desktop:package:linux": "electron-builder --linux",
    "version": "npm run build",
    "postversion": "echo 'Version updated. Run: git push && git push --tags' to deploy manually",
    "release": "npm run build && npm run package:all && npm version patch && npm publish",
    "artifacts": "cd rust-executor && napi artifacts",
    "postinstall": "node scripts/fetch-tree-sitter-grammars.js || true",
    "build:ts-grammars": "node scripts/build-tree-sitter-grammars.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhinos0608/codecrucible-synth.git"
  },
  "homepage": "https://github.com/rhinos0608/codecrucible-synth#readme",
  "bugs": {
    "url": "https://github.com/rhinos0608/codecrucible-synth/issues"
  },
  "author": "CodeCrucible Team",
  "license": "MIT",
  "keywords": [
    "cli",
    "ai",
    "coding",
    "assistant",
    "mcp",
    "terminal",
    "multi-voice",
    "consciousness",
    "local-ai",
    "ollama",
    "offline",
    "agentic",
    "react-pattern",
    "tool-calling",
    "planning",
    "autonomous",
    "ast-analysis",
    "git-integration",
    "code-understanding"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
