    "@azure/arm-resources": "^5.2.0",
    "@azure/identity": "^4.0.1",
    "@e2b/code-interpreter": "^1.5.1",
    "@huggingface/inference": "^4.7.1",
    "@lancedb/lancedb": "^0.22.0",
    "@lmstudio/sdk": "^1.5.0",
