{
  "compilerOptions": {
    // 2025 Best Practices - Modern Target & Modules
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node", // Keep as "node" for compatibility during migration
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,

    // Strict Type Checking - 2025 Enterprise Standards (gradual enablement)
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,

    // Additional Checks - 2025 Standards (Gradual Migration)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,

    // Module Resolution & Imports
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,

    // Emit Options - Optimized for memory efficiency
    "declaration": true,
    "declarationMap": false, // Disabled to reduce memory usage during build
    "sourceMap": false, // Disabled to reduce memory usage during build
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true, // Remove comments to reduce memory usage
    "noEmitOnError": true,
    "preserveConstEnums": true, // Required when isolatedModules is enabled
    "incremental": true, // Enable incremental compilation for faster rebuilds
    "tsBuildInfoFile": "./dist/.tsbuildinfo", // Store build info for incremental builds

    // Decorator Support (if needed)
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Library Inclusions
    "lib": ["ES2022", "DOM"],
    "types": ["node", "jest"],

    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/config/*": ["config/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/domain/*": ["src/domain/*"],
      "@/application/*": ["src/application/*"],
      "@/infrastructure/*": ["src/infrastructure/*"],
      "@/core/*": ["src/core/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "archive",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/testing/**/*"
  ]
}
